#include <stdio.h>
#include <stdint.h>

int main(void) {

	int num1, num2;

	printf("Enter first number (integer): ");
	scanf("%d", &num1);

	printf("\nEnter second number (integer): ");
	scanf("%d", &num2);

	if (num1 > num2) {
		printf("\nFirst number (%d) is bigger than the second number (%d).", num1, num2);
	}
	else if (num2 > num1) {
		printf("\nFirst number (%d) is smaller than the second number (%d).", num1, num2);
	}
	else {
		printf("\nThe numbers (%d, %d) are equal", num1, num2);
	}

	printf("\nPress Enter Key to Exit the Application...");
	while(getchar() != '\n') {

	}
	getchar();

	return 0;
}
