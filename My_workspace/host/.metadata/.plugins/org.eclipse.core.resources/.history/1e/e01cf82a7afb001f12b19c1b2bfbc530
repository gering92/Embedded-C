#include <stdio.h>

int main(void) {
	float num1, num2, num3;
	float average;

	printf("Enter 3 Numbers: ");
	scanf("%f %f %f", &num1, &num2, &num3);


	average = (num1 + num2 + num3) / 3;
	printf("\nYour Average is: %f\n", average);

	printf("Press enter to exit the application. \n");
	while(getchar() != '\n') {

	}
	getchar();
}
